<%= form_with model: [:salon, @reservation], url: salon_reservation_path do |f| %>
<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>新規予約画面</h1>
    </div>
    <div class="col-12 mt-3 content">
      <%#= render 'layouts/error_messages', model: form.object %>
      <div class="day form-group">
         <%= f.date_select :day, {}, class: 'form-control',:placeholder =>"#{@reservation.day.strftime("%Y年%m月%d日(%a)")}"  %>
        <%#= form.text_field :day, class: 'form-control',:placeholder =>"#{reservations.day.strftime("%Y年%m月%d日(%a)")}"  %>
      </div>
      <div class="time form-group">

        <%#= form.text_field :time, class: 'form-control', :placeholder =>"#{reservations.time.strftime( "%H:%M" )}"  %>
      </div>
      </div>
      <%#= form.hidden_field :user_id, value: current_user.id %>
      <%#= form.hidden_field :start_time, value: @start_time %>
      <div class="submit">
        <%= f.submit '予約する', class: 'btn btn-primary mx-auto d-block' %>
      </div>
    <% end %>
    <div class="col-12 text-right">
      <%= link_to '戻る', reservations_path %>
    </div>
    </div>
  </div>
</div>
