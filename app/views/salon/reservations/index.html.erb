<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
        <h4>予約スケジュール</h4></div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user.last_name %><%= reservation.user.first_name %></td>
        <td><%= reservation.menu_id %></td>
        <td><%=  reservation.time.strftime( "%H:%M" ) %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- ここから --!>
<%= month_calendar events: @reservations do |date, reservations| %>
  <%= date %>

  <% reservations.each do |reservation| %>
    <div>
       <%= reservation.time.strftime( "%H:%M" )%>:
      <%= reservation.user.last_name %><%= reservation.user.first_name %>
    </div>
  <% end %>
<% end %>
