<div class = "container my-4">
  <h4><strong style="background-color:#EEEEEE;">Salon page<i class="fa-solid fa-shop"></i></strong></h4>
    <div class = "row">
      <%= link_to "編集する", salon_edit_information_path, class: "btn d-flex align-items-center ms-3", style: "background-color: #dda0dd; color: #fffafa" %>
    </div>
    <div class='row'>
      <table class="table table-bordered border-dark table-hover table-inverse custom-table">
        <tbody>
          <tr>
            <th>サロン名</th>
              <td><%= @salon.name %></td>
          </tr>
          <tr>
            <th>紹介文</th>
              <td><%= @salon.introduction %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
              <td><%= @salon.email %></td>
          </tr>
          <tr>
            <th>電話番号</th>
              <td><%= @salon.phone_number %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
              <td><%= @salon.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
              <td><%= @salon.address %></td>
          </tr>
        </tbody>
      </table>
    </div>
</div>
