<div class="container">
  <div class="row pt-5 pl-5 ml-5">
    <div class="customer-group">
      <div class="title">
        <h3 class="text-center bg-light">サロン一覧</h3>
      </div>
    </div>
  </div>
    <div class="row pt-5 justify-content-center">
      <div class="col-9">
        <table class="table">
          <thead class="bg-light text-center">
            <tr>
             
              <th>サロン名</th>
              <th>メールアドレス</th>
              
            </tr>
          </thead>
          <tbody>
          <% @salons.each do |salon| %>
            <tr class="text-center">
              <td><%= salon.id %></td>
              <td>
              <%= link_to admin_salon_path(salon.id) do %>
              <%= salon.name %>
              <% end %>
              </td>
              <td><%= salon.email %></td>
              
                
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="pagination d-flex justify-content-center mb-4">
      <%#= paginate @customers %>
    </div>
</div>
  