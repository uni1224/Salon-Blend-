<% @posts.each do |post| %>
<div class="container mt-5 ">
  <div class="row">
<div class='col-md-5 mt-5 ml-5'>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.image, size: "200x200" , class: "shadow p-3 mb-5 bg-white", style: "margin: auto;" %>
    <% end %>

    </div>
       <h4 class="ml-5 mb-5"><span class="title-custom px-4">投稿一覧</span></h4>

        </div>
 <table class="table table-striped">
     <tr>
     <th>投稿ID</th>
     <th>投稿タイトル</th>
     <th>投稿内容</th>
     </tr>

 <tr>

 <td><%= post.id %></td>
 <td><%= post.title %></td>
 <td><%= post.body %></td>
 </tr>
<%end%>

</table>

         </div>

 </div>

