<div class="container">
  <div class="row pt-5 pl-5 ml-5">
    <div class="col-12 text-center title">
        <h4>ブログ</h4>
        <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
       <% @posts.each do |post| %>
     <tr><td>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.image, size: "250x250" , class: "shadow p-3 mb-1 bg-white", style: "margin: auto;" %>
    <% end %></td>
 <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
 <td><%= post.title %></td>
  <td><div id="post_<%= post.id %>">
    <%= render 'post', post: post %>
  </div>
</td>
<td><i class="fa-regular fa-comment"></i><span id="comment_count"><%= post.comments.count %></span>
 </td><% end %>
</tr>
  </tbody>
</table>

         </div>

 </div>

