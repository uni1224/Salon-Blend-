<div class="container post-detail-container">
  <div class="col-md-5 mx-auto mt-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md 4d-flex text-center justify-content-center align-items-center">
        <%= image_tag @post.image, size: "400x430", class: "shadow p-3 mb-5 bg-white", style: "margin: auto;" %>
      </div>
        <div class="tag-box">
          <% @post.tags.each do |tag| %>
            <span class="label">#<%= tag.name %></span>
          <% end %>
        </div>
    </div>
  </div>
    <div class="col-12 text-center title">
      <i class="fa-regular fa-comment"></i>
      <span id="comment_count">
        <%= @post.comments.count %>
      </span>commnts
          <i class="fa-regular fa-eye"></i>
          <%= @post.read_counts.count %>views
            <span id="post_<%= @post.id %>">
              <%= render 'post', post: @post %>
            </span>
          </div>
            <div class="col-8 mx-auto mt-5 ">
              <div class="box73">
          <div class="box-title">
            <%= @post.title%>
          </div>
        <%= @post.body %>
              </div>
           </div>
      <div class=" mt-3 text-center">
    <div id="comments-area-<%= @post.id %>">
      <%= render "user/comments/comment", post: @post,comment: @comment,post_comment: @post_comment %>
    </div>
      <div id="comment_form-<%= @post.id %>">
        <%= render "user/comments/comment_form", post: @post,comment: @comment %>
      </div>
  </div>
</div>
