<div class="container">
  <div class="col-md-10 mx-auto mt-5">

    <div class="row justify-content-center mb-5">
    <div class="col-md-4 headline">

     <h4>投稿詳細</h4>
    </div>
    </div>

    <div class="row d-flex justify-content-center">

    <div class="col-md 4d-flex text-center justify-content-center align-items-center">

     <%= image_tag @post.image, size: "200x200" %>
</div>
    <div class="col-md-8 d-flex justify-content-center mr-5"  style="background-color: #dcdcdc;" >
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col" style="width: 25%"></th>
          <th scope="col" style="width: 75%"></th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td>タイトル</td>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <td>内容</td>
        <td><%= @post.body %></td>
      </tr>
      <tr>
         <td>コメント数</td>
         <td>コメント件数:<span id="comment_count"><%= @post.comments.count %></span></td>

      </tr>
     </tbody>
    </table>
    </div>
    <div id="comments-area-<%= @post.id %>"><%= render "comments/comment", post: @post,comment: @comment,post_comment: @post_comment %></div>
<div id="comment_form-<%= @post.id %>"><%= render "comments/comment_form", post: @post,comment: @comment %></div>


  </div>
  </div>
</div>