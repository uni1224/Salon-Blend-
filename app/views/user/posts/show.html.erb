<div class="container">
  <div class="col-md-10 mx-auto mt-5">

    <div class="row justify-content-center mb-5">
    <div class="col-md-4 headline">

     <h4>投稿詳細</h4>
    </div>
    </div>

    <div class="row d-flex justify-content-center">

    <div class="col-md 4d-flex text-center justify-content-center align-items-center">

     <%= image_tag @post.image, size: "200x200" %>
</div>
    <div class="col-md-8 d-flex justify-content-center mr-5"  style="background-color: #dcdcdc;" >
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col" style="width: 25%"></th>
          <th scope="col" style="width: 75%"></th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td>メニュー名</td>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <td>メニュー説明</td>
        <td><%= @post.body %></td>
      </tr>
         <td>コメント数：<%= @post.comments.count %></td>

      </tr>
     </tbody>
    </table>
    </div>
    <div id="comments-area"><%= form_with model:[@post,@comment] do |f| %>
<%= f.text_area :comment, placeholder: "コメントをここに" %>
<%= f.submit "送信" %>
<% end %><%# render "comments/comment_form", post: @post,comment: @comment %></div>
<table>
  <tbody>
    <% @post.comments.each do |comment| %>
    <tr>
      <td><%= comment.user.first_name %></td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.user == current_user %>
        <%= link_to "削除", post_comments_path(comment.post,comment), method: :delete, class: "btn btn-sm btn-danger p-0 p-1", style: "font-size: 8px;" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
    


  </div>
  </div>
</div>